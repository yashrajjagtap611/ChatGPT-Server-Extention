{
  "manifest_version": 3,
  "name": "ChatGPT Cookie Importer",
  "version": "1.0.0",
  "description": "Import cookies from chatgpt.com-cookies.json into ChatGPT domain.",
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://*.openai.com/*",
    "https://openai.com/*",
    "https://api.openai.com/*",
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "ChatGPT Cookie Importer",
    "default_popup": "popup.html"
  }
}

